{
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm install && npx prisma generate && npm run build"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/api/ping",
    "healthcheckTimeout": 20,
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3
  }
}